@{
    Layout = null;
}

<form method="post">
    <input name="name" type="text" />



    <select name="cheeseToRemove">
        <option value="">- - Pick a Cheese - -</option>
        @foreach (CheeseModel C in ViewBag.Cheeses)
        { 

            <option value="@C.name">@C.name @C.desc</option>
        }
    </select>

    <input type="submit" value="Remove Cheese" />
</form>